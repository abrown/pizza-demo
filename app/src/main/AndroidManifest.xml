<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abrown.pizza">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrinkActivity"
            android:label="@string/title_activity_drink"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PizzaActivity"
            android:label="@string/title_activity_pizza"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfirmActivity"
            android:label="@string/title_activity_confirm"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>